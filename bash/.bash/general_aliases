alias printers='sudo systemctl status cups.service && sudo systemctl status avahi-daemon.service'
alias qnb='pyglobal && jupyter notebook --no-browser'
alias ttail='tail -n 1'

# mount BIG with write permissions
alias mBIG='sudo mount /dev/sda2 ~/BIG/ -o umask=000'
alias BIG2='sudo mount /dev/sda2 /mnt/BIG -o umask=000'

# ===== SYSTEM ALIASES ===== #
alias full_upgrade='~/update.sh'
alias apps='cd ~/.local/share/applications/'

# ===== TUI ALIASES ===== #
alias gmux='~/dotfiles/tui/gmux.sh'
alias pdfmerge='~/dotfiles/tui/pdfmerge.sh'
alias ypdf='~/dotfiles/tui/pdfmerge_yazi.sh'
alias vpn='~/dotfiles/tui/vpn.sh'
alias cm='~/dotfiles/tui/quick_commits.sh'

# ===== NEOVIM ===== #
alias lvim='NVIM_APPNAME="nvim-lazyvim" nvim'
alias nvchad='NVIM_APPNAME="nvchad" nvim'
alias evim='cd ~/.config/nvim/ && nvim'
