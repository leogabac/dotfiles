alias printers='sudo systemctl status cups.service && sudo systemctl status avahi-daemon.service'
alias qnb='pyglobal && jupyter notebook --no-browser'
alias ttail='tail -n 1'

# mount BIG with write permissions
alias mBIG='sudo mount /dev/sda2 ~/BIG/ -o umask=000'
alias BIG2='sudo mount /dev/sda2 /mnt/BIG -o umask=000'

# ===== SYSTEM ALIASES ===== #
alias full_upgrade='~/.scripts/update.sh'
alias apps='cd ~/.local/share/applications/'

# ===== TUI ALIASES ===== #
